= render partial: 'shared/header', :locals => { :active => 'Home' }
.main-container.bg-white
  = @page.store.shopify_id
  - if @tests.count != 0
    %section.bg-white.space-lg.pb-0
      .container
        .row.justify-content-center.text-center.section-intro
          .col-12
            %h4.mb-3
              Tests for Page:
              .mt-0
                %strong= @page.url
            - if @page.all_tests_over
              = link_to 'Create New Test', new_shop_page_test_path(@shop, @page), class: "btn btn-success mt-0"
          %section.bg-white.flush-with-above
            .container
              .row
                .col
                  %table.table.table-borderless.table-hover.align-items-center
                    %thead
                      %tr
                        %th{:scope => "col"}
                        %th{:scope => "col"} Clicks
                        %th{:scope => "col"} Impressions
                        %th{:scope => "col"} CTR
                        %th{:scope => "col"} Position
                    %tbody
                      = render partial: 'shops/pages/test', collection: @tests
